/dts-v1/;

/include/ "sapphire.dtsi"

#define CPU_FREQ 250000000
#define PERIPHERAL_FREQ 50000000

/ {
    chosen {
        bootargs = "rootwait console=hvc0  earlycon=sbi root=/dev/mmcblk0p2 init=/sbin/init mmc_core.use_spi_crc=0";
    };

    cpus {
        timebase-frequency = <PERIPHERAL_FREQ>;
        cpu@0 {
            clock-frequency = <CPU_FREQ>;
        };
    };

    memory@1000 {
        device_type = "memory";
        reg = <0x00001000 0x01E84800>;
    };

    reserved-memory {
        #address-cells = <1>;
        #size-cells = <1>;
        ranges;

        opensbi: sbi@1000000 {
            reg = <0x01000000 0x80000>;
        };
    };
};

&apbA_clock {
    clock-frequency = <PERIPHERAL_FREQ>;
};

&spiA {
    status = "okay";
    flash: flash@0 {
        #address-cells = <1>;
        #size-cells = <1>;
        compatible = "spi-nor";
        reg = <0>;
        spi-max-frequency = <6000000>;

        partition@0 {
            label = "fpga_bitstream";
            reg = <0x000000 0x400000>;
        };
        partition@1 {
            label = "opensbi";
            reg = <0x400000 0x080000>;
        };
        partition@2 {
            label = "uboot";
            reg = <0x480000 0x080000>;
        };
        partition@3 {
            label = "user";
            reg = <0x500000 0x300000>;
        };
    };
};

&spiB {
    status = "okay";
    mmc-slot@0 {
        compatible = "mmc-spi-slot";
        reg = <0>;
        voltage-ranges = <3300 3300>;
        spi-max-frequency = <10000000>;
    };
};

&uartA {
    status = "okay";
};

&gpioA {
    status = "okay";
};
