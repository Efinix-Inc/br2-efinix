+static int spinal_lib_uart_poll_get_char(struct uart_port *port)
+{
+	/* enable Rx interrupt */
+	spinal_lib_uart_writel(port, SPINAL_LIB_UART_CONTROL_RRDY_MSK,
+			SPINAL_LIB_UART_STATUS);
+
+	while (!(spinal_lib_uart_readl(port, SPINAL_LIB_UART_STATUS) &
+		 SPINAL_LIB_UART_STATUS_RRDY_MSK))
+		return NO_POLL_CHAR;
+
+	return spinal_lib_uart_readl(port, SPINAL_LIB_UART_DATA);
+}
