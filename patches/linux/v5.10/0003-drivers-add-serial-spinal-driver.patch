+{
+	/* enable Tx interrupt */
+	spinal_lib_uart_writel(port, SPINAL_LIB_UART_CONTROL_TRDY_MSK,
+			SPINAL_LIB_UART_STATUS);
+
+	while (!(spinal_lib_uart_readl(port, SPINAL_LIB_UART_STATUS) &
+		 SPINAL_LIB_UART_STATUS_TRDY_MSK))
+		cpu_relax();
+
+	spinal_lib_uart_writel(port, c, SPINAL_LIB_UART_DATA);
+}
+#endif
