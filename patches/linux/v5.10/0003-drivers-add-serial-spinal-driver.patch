+static void spinal_lib_uart_tx_chars1(struct spinal_lib_uart *pp)
+{
+	struct circ_buf *xmit = &pp->port.state->xmit;
+	int count;
+
+	if (&pp->port.x_char && spinal_lib_uart_tx_availability(&pp->port)) {
+		/* Send special char - probably flow control */
+		spinal_lib_uart_tx(&pp->port, pp->port.x_char);
+		pp->port.x_char = 0;
+		pp->port.icount.tx++;
+		return;
+	}
+
+	if (uart_circ_empty(xmit) || uart_tx_stopped(&pp->port)) {
+		spinal_lib_uart_stop_tx(&pp->port);
+		return;
+	}
+
+	count = SPINAL_LIB_UART_FIFO_DEPTH;
+	do {
+		spinal_lib_uart_tx(&pp->port, xmit->buf[xmit->tail]);
+		xmit->tail = (xmit->tail + 1) & (UART_XMIT_SIZE - 1);
+		pp->port.icount.tx++;
+		if (uart_circ_empty(xmit))
+			break;
+	} while (--count > 0);
+
+	if (uart_circ_chars_pending(xmit) < WAKEUP_CHARS)
+		uart_write_wakeup(&pp->port);
+
+	if (uart_circ_empty(xmit))
+		spinal_lib_uart_stop_tx(&pp->port);
+}
