

/dts-v1/;
//include/ "dt-bindings/interrupt-controller/irq.h"
//include/ "dt-bindings/gpio/gpio.h"



/ {
    #address-cells = <0x1>;
    #size-cells = <0x1>;
    compatible = "spinal,vexriscv";
    model = "spinal,vexriscv_saxon";

    chosen {
        bootargs = "rootwait console=hvc0  earlycon=sbi root=/dev/mmcblk0p2 init=/sbin/init mmc_core.use_spi_crc=0";  //rng_core.default_quality=1000 random.trust_cpu=on

        //bootargs = "rootwait console=hvc0 earlycon=sbi root=/dev/ram0 init=/sbin/init mmc_core.use_spi_crc=0";
        //not necessary if uboot is used
        //linux,initrd-start = <0x81000000>;
        //linux,initrd-end =   <0x82000000>;
    };

    cpus {
        #address-cells = <0x1>;
        #size-cells = <0x0>;
        timebase-frequency = <80000000>;
        cpu@0 {
            device_type = "cpu";
            compatible = "riscv";
            riscv,isa = "rv32ima";
            mmu-type = "riscv,sv32";
            reg = <0>;
            status = "okay";
            L0: interrupt-controller {
                #interrupt-cells = <0x00000001>;
                interrupt-controller;
                compatible = "riscv,cpu-intc";
            };
        };
    };



    memory@1000 {
        device_type = "memory";
        reg = <0x00001000 0x1FFFF000>;
    };

	reserved-memory {
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		opensbi: sbi@1000000 {
			reg = <0x01000000 0x80000>;
		};
	};

	clocks {
		compatible = "simple-bus";
		#address-cells = <1>;
		#size-cells = <0>;

		apbA_clock: clock@1 {
			compatible = "fixed-clock";
			reg = <1 0>;
			#clock-cells = <0>;
			clock-frequency = <80000000>;
		};
	};



  apbA@F8000000 {
        compatible = "simple-bus";
        #address-cells = <0x1>;
        #size-cells = <0x1>;
        ranges = <0x0 0xF8000000 0x01000000>;

        plic: interrupt-controller@c00000 {
            compatible = "sifive,plic-1.0.0", "sifive,fu540-c000-plic";
            #interrupt-cells = <1>;
            interrupt-controller;
            interrupts-extended = <
                &L0 11 &L0 9
               >;
            reg = <0x00C00000 0x400000>;
            riscv,ndev = <32>;
        };

        gpioA: gpio@16000 {
	        compatible = "spinal-lib,gpio-1.0";
	        interrupt-parent = <&plic>;
	        ngpio = <16>;
	        interrupts = <12 13>;
	        reg = <0x16000 0x1000>;
	        gpio-controller;
	        #gpio-cells = <2>;
	        interrupt-controller;
	        #interrupt-cells = <2>;
        };

	uartA: uart@10000 {
            compatible = "spinal-lib,uart-1.0";
            reg = <0x10000 0x1000>;
            clocks = <&apbA_clock 0>;
        };

        spiA: spi@14000 {
            compatible = "spinal-lib,spi-1.0";
            #address-cells = <1>;
            #size-cells = <0>;
            reg = <0x014000 0x1000>;
            cmd_fifo_depth = <256>;
            rsp_fifo_depth = <256>;
            num-cs = <1>;
            clocks = <&apbA_clock 0>;
	        flash: flash@0 {
		        #address-cells = <1>;
		        #size-cells = <1>;
		        compatible = "spi-nor";
		        reg = <0>;
		        spi-max-frequency = <6000000>;

	            partition@0 {
	                label = "fpga_bitstream";
	                reg = <0x000000 0x400000>;
	            };
	            partition@1 {
	                label = "opensbi";
	                reg = <0x400000 0x080000>;
	            };
	            partition@2 {
	                label = "uboot";
	                reg = <0x480000 0x080000>;
	            };
	            partition@3 {
	                label = "user";
	                reg = <0x500000 0xB00000>;
	            };
	        };
        };

        spiB: spi@15000 {
            compatible = "spinal-lib,spi-1.0";
            #address-cells = <1>;
            #size-cells = <0>;
            reg = <0x015000 0x1000>;
            cmd_fifo_depth = <256>;
            rsp_fifo_depth = <256>;
            clocks = <&apbA_clock 0>;
            num-cs = <1>;
            mmc-slot@0 {
                compatible = "mmc-spi-slot";
                reg = <0>;
                voltage-ranges = <3300 3300>;
                spi-max-frequency = <10000000>;
            };

        };
    };

};
